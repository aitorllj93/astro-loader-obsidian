---
import { isLegacyConfig } from '../../shell/utils/config';
import type { Document, SpaceshipConfig } from '../../types';

export type Props = {
  config: SpaceshipConfig;
  document: Document;
};

const { config, document } = Astro.props;

const showPublishDate = isLegacyConfig(config) ? config.displayOptions?.showPublishDate !== false : config.features.article.publishDate.enabled;

const { updated } = document.data;
---

{
  updated && showPublishDate && (
    <span data-pagefind-weight="0" class="article-date">
      {updated.toLocaleDateString("es-ES")}
    </span>
  )
}
