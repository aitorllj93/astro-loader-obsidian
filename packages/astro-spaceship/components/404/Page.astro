---
import Layout from "../Layout/Layout.astro";
import LeftSidebar from "../LeftSidebar/LeftSidebar.astro";
import type { Page } from "../../types";
import { buildPage, type Props } from "./utils/get-static-paths";

export type {
  Props
};

const { config, tree } = Astro.props;

const page = buildPage(Astro, config.defaultLocale);
---

<Layout page={page} config={config} footer={null}>
  <Fragment slot="head">
    <slot name="head" />
  </Fragment>
  <LeftSidebar
    website={config}
    tree={tree}
  />

  <article class="article">
    <section class="article-content">
      <h1 class="article-title">
        {page.title}
      </h1>
      <p class="article-description">
        {page.seo.description}
      </p>
    </section>
  </article>
</Layout>
