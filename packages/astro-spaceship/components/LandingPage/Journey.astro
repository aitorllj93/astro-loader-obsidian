---
import { Image } from "astro:assets";

import Logo from "./Journey.png";

import config from "astro-spaceship/config";

import MapView from "astro-spaceship/components/MapView/MapView.astro";
import Layout from "astro-spaceship/components/Layout/Layout.astro";

export type Props = {
  initialPage?: string;
  logo?: ImageMetadata;
  title?: string;
  subtitle?: string;
  lat: number;
  lng: number;
};

const {
  initialPage,
  logo = Logo,
  title = config.title,
  subtitle = config.description,
  lat,
  lng,
} = Astro.props;
---

<Layout
  config={config}
  page={{
    title: config.title ?? "",
    language: config.defaultLocale,
    seo: {
      description: config.description,
    },
  }}
  footer={null}
>
  <div class="map-container">
    <MapView config={config} lat={lat} lng={lng} />
  </div>
  <a href={initialPage}>
    <section
      class="logo-container perspective group"
    >
      <Image
        src={logo}
        alt=""
        class="logo"
      />
    </section>
  </a>
  <a href={initialPage}>
    <section
      class="title-container"
    >
      <h1
        class="title"
      >
        {title}
      </h1>
      <p
        class="subtitle"
      >
        {subtitle}
      </p>
    </section>
  </a>
</Layout>
