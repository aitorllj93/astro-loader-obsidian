---
import type { Document } from '../../types';

import BackLinks from "../BackLinks/BackLinks.astro";
import OutgoingLinks from "../OutgoingLinks/OutgoingLinks.astro";

export type Props = {
  document?: Document | undefined;
  backlinks?: Document[] | undefined;
}

const { document, backlinks } = Astro.props;
---

<div
  class="links-section"
>
  <OutgoingLinks document={document} />
  <BackLinks links={backlinks} />
</div>