---
import type { SpaceshipConfig } from "../../types";
import Logo from "./Logo.astro";

export type Props = {
  id?: string;
  // biome-ignore lint/suspicious/noExplicitAny: <explanation>
  logo?: any;
  config: SpaceshipConfig;
};

const { id, logo, config } = Astro.props;
---

<header id={id} class="header">
  <a
    href={import.meta.env.BASE_URL}
    class="header-link"
  >
    {!config.logo ? (logo ? <logo /> : <Logo />) : <Fragment set:html={config.logo} />}
    {config.title}
  </a>
</header>
