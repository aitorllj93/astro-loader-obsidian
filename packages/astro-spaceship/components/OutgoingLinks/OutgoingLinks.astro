---
import { getImage } from "astro:assets";

import { useI18n } from "../../i18n";
import type { Document } from "../../types";

import ImageIcon from "../Icons/Image.astro";
import LinkIcon from "../Icons/Link.astro";

export type Props = {
  document?: Document | undefined;
};

const { document } = Astro.props;

const links = document?.data?.links ?? [];
const images = document?.data?.images ?? [];

const shouldRender = !!((links.length && links.length > 0) || (images.length && images.length > 0));

const { t } = useI18n(Astro);

const imageLinks = await Promise.all(images.map(async i => ({
  ...i,
  href: i.href ? await getImage({ src: i.href }) : undefined
})));
---

{
  shouldRender && (
    <nav class="links">
      <h2 class="links-title">{t('nav.links')}</h2>
      <ul class="links-list">
        {links.map((link) => (
          <li class="link">
            <a href={link.href} title={link.title}>
              <LinkIcon />
              <span>{link.title}</span>
            </a>
          </li>
        ))}
        {imageLinks.map((image) => (
          <li class="link">
            <a href={image.href?.src} title={image.title}>
              <ImageIcon />
              <span>{image.title}</span>
            </a>
          </li>
        ))}
      </ul>
    </nav>
  )
}
